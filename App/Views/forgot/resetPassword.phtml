        <div class="row">
          <div class="col">
            
            <form>
              <div class="form-group">
                <input type="password" id="newPass" name="senha" class="form-control" placeholder="Senha">
                <input type="hidden" name="email" value="<?= $_GET['email'] ?>">
                <input type="hidden" name="token" value="<?= $_GET['token'] ?>">
