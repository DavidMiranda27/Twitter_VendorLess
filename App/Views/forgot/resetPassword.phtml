<script>
  $(document).ready(() => {
    $('button').on('click', e => {
      e.preventDefault()
      var password = $('#newPass')

      if (password.val() != "") {

        let dados = $('form').serialize()

        $.ajax({
          type: 'post',
          url: '/set_new_pass',
          data: dados,
          success: function (response) {
            alert(response)
            window.location = '/'
          }
        })
      }else {
        alert('Campo vazio:')
      }
    })
  })
</script>



    
  